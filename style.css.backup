/*
  AfroQueen Beauty Supply - Soft Divine Seduction
  -------------------------------------------------------------------------
  Luxury Afro-Caribbean wellness brand aesthetic.
  Soft, elegant, feminine luxury with warm Caribbean sophistication.
  Panama Black-Owned Business - Queen Wellness Positioning
*/

:root {
  /* Luxury Gold & Warm Tones */
  --gold: #d4af37; /* Rich luxury gold */
  --gold-light: #e8d4a0; /* Soft champagne gold */
  --rose-gold: #e4c3ad; /* Warm rose gold accent */

  /* Soft Neutrals */
  --cream: #fef8f0; /* Soft cream background */
  --warm-white: #fffdf7; /* Warm white */
  --soft-brown: #8b7355; /* Soft elegant brown */
  --deep-brown: #3e2723; /* Deep rich chocolate */

  /* Accent Colors */
  --caribbean-teal: #7eb8b3; /* Soft tropical teal */
  --blush: #f4e4dc; /* Soft blush pink */

  /* Text Colors */
  --text-dark: #3e2723; /* Deep elegant brown */
  --text-medium: #6d5d52; /* Medium warm brown */
  --text-light: #ffffff; /* Pure white */

  /* Primary Brand Colors */
  --primary: var(--gold);
  --secondary: var(--rose-gold);
  --accent: var(--caribbean-teal);
  --light: var(--cream);
  --dark: var(--deep-brown);
}

/* Global resets */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Poppins", sans-serif;
  font-weight: 400;
  font-size: 16px;
  line-height: 1.5;
  color: var(--text-dark);
  background-color: var(--warm-white);
  letter-spacing: 0.3px;
  transition: all 0.3s ease;
}

img {
  max-width: 100%;
  display: block;
  transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1), opacity 0.4s ease;
}

/* Luxury Typography - Standardized */
h1,
h2,
h3,
h4 {
  font-family: "Playfair Display", serif;
  font-weight: 600;
  color: var(--deep-brown);
  line-height: 1.4;
  letter-spacing: 1px;
  margin-bottom: 0.75rem;
}

h1 {
  font-size: 36px;
  font-weight: 700;
  letter-spacing: 1.5px;
}

@media (max-width: 768px) {
  h1 {
    font-size: 28px;
  }
}

h2 {
  font-size: 28px;
  font-weight: 600;
  line-height: 1.4;
  margin-bottom: 0.75rem;
}

h3 {
  font-size: 18px;
  font-weight: 600;
  line-height: 1.4;
  letter-spacing: 0.5px;
  margin-bottom: 0.75rem;
}

h4 {
  font-size: 18px;
  font-weight: 600;
  line-height: 1.4;
  letter-spacing: 0.5px;
  margin-bottom: 0.75rem;
}

p {
  font-family: "Poppins", sans-serif;
  font-size: 16px;
  font-weight: 400;
  line-height: 1.8;
  color: var(--text-medium);
  margin-bottom: 1.5rem;
}

button,
.btn {
  font-family: "Poppins", sans-serif;
  font-size: 16px;
  font-weight: 500;
  letter-spacing: 0.5px;
}

label,
input,
select {
  font-family: "Poppins", sans-serif;
  font-size: 14px;
  font-weight: 400;
}

/* Containers */
.container {
  width: 90%;
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
}

@media (max-width: 768px) {
  .container {
    padding: 0 1rem;
  }
}

/* Announcement bar */
.top-bar {
  background: linear-gradient(
    135deg,
    var(--deep-brown) 0%,
    var(--soft-brown) 100%
  );
  color: var(--gold);
  text-align: center;
  padding: 0.75rem 1rem;
  font-size: 0.95rem;
  letter-spacing: 1.5px;
  font-weight: 500;
  border-bottom: 1px solid rgba(212, 175, 55, 0.2);
}

.top-bar p {
  color: var(--gold);
  margin-bottom: 0;
}

/* Navigation */
.nav {
  background: rgba(255, 253, 247, 0.98);
  backdrop-filter: blur(10px);
  color: var(--text-dark);
  position: sticky;
  top: 0;
  z-index: 999;
  border-bottom: 1px solid rgba(212, 175, 55, 0.15);
  box-shadow: 0 2px 20px rgba(0, 0, 0, 0.03);
  transition: all 0.4s ease;
}

.nav-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.5rem 0;
  transition: padding 0.3s ease;
}

.logo {
  font-size: 1.8rem;
  font-weight: 300;
  font-family: "Playfair Display", serif;
  letter-spacing: 2px;
  color: var(--deep-brown);
  text-decoration: none;
  transition: color 0.4s ease;
}

.logo:hover {
  color: var(--gold);
}

.logo .highlight {
  color: var(--gold);
  font-weight: 400;
}

.menu {
  list-style: none;
  display: flex;
  gap: 2.5rem;
}

.menu a {
  color: var(--gold);
  text-decoration: none;
  font-size: 0.95rem;
  font-weight: 500;
  letter-spacing: 1px;
  position: relative;
  transition: color 0.4s ease;
}

.menu a::after {
  content: "";
  position: absolute;
  bottom: -5px;
  left: 0;
  width: 0;
  height: 1px;
  background: var(--gold);
  transition: width 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

.menu a:hover {
  color: var(--gold);
}

.menu a:hover::after {
  width: 100%;
}

.actions a {
  margin-left: 1.5rem;
  color: var(--gold);
  text-decoration: none;
  font-size: 16px;
  font-weight: 600;
  letter-spacing: 0.5px;
  transition: all 0.4s ease;
}

.actions a:hover {
  color: var(--gold);
  transform: translateY(-1px);
}

/* Hero section - Soft Divine Seduction */
.hero {
  position: relative;
  height: 90vh;
  min-height: 600px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  background: linear-gradient(
    135deg,
    var(--blush) 0%,
    var(--cream) 50%,
    var(--warm-white) 100%
  );
}

.hero-img {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  object-fit: contain;
  opacity: 0.95;
  filter: brightness(1.05) contrast(0.95);
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(
    circle at 30% 50%,
    rgba(254, 248, 240, 0.3) 0%,
    rgba(255, 253, 247, 0.6) 100%
  );
  backdrop-filter: blur(1px);
}

.hero-content {
  position: relative;
  z-index: 2;
  max-width: 700px;
  text-align: center;
  padding: 3rem 2rem;
  color: var(--text-dark);
  animation: fadeInUp 1.2s cubic-bezier(0.16, 1, 0.3, 1);
}

.hero-content h1 {
  font-size: clamp(2.5rem, 6vw, 4.5rem);
  color: var(--deep-brown);
  margin-bottom: 1.5rem;
  font-weight: 300;
  line-height: 1.2;
  letter-spacing: 3px;
  text-shadow: 0 2px 20px rgba(212, 175, 55, 0.1);
}

.hero-content p {
  font-size: clamp(1.1rem, 2vw, 1.4rem);
  margin-bottom: 3rem;
  line-height: 1.8;
  color: var(--text-medium);
  font-weight: 300;
  letter-spacing: 1.5px;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.hero-buttons {
  display: flex;
  gap: 1.5rem;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Luxury CTA Buttons */
.btn {
  display: inline-block;
  padding: 1rem 2.5rem;
  border-radius: 50px;
  font-weight: 300;
  text-align: center;
  cursor: pointer;
  text-decoration: none;
  letter-spacing: 1.5px;
  font-size: 0.95rem;
  position: relative;
  overflow: hidden;
  transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  border: 1px solid transparent;
}

.btn::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s ease, height 0.6s ease;
}

.btn:hover::before {
  width: 300px;
  height: 300px;
}

.btn-primary {
  background: linear-gradient(135deg, var(--gold) 0%, var(--gold-light) 100%);
  color: var(--deep-brown);
  box-shadow: 0 4px 20px rgba(212, 175, 55, 0.3);
  border: 1px solid var(--gold);
}

.btn-primary:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 30px rgba(212, 175, 55, 0.4);
  background: linear-gradient(135deg, var(--gold-light) 0%, var(--gold) 100%);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.9);
  color: var(--deep-brown);
  border: 1px solid var(--gold);
  backdrop-filter: blur(10px);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

.btn-secondary:hover {
  background: rgba(255, 255, 255, 1);
  transform: translateY(-3px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  border-color: var(--gold-light);
}

.btn-outline {
  border: 2px solid var(--primary);
  color: var(--primary);
  background-color: transparent;
  padding: 0.6rem 1.2rem;
}

.btn-outline:hover {
  background-color: var(--primary);
  color: var(--text-light);
}

/* Featured Ritual Moment */
.featured-ritual {
  padding: 6rem 0;
  background: linear-gradient(135deg, var(--cream) 0%, var(--blush) 100%);
}

.ritual-feature-inner {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 4rem;
}

.ritual-feature-image {
  flex: 1 1 500px;
}

.ritual-feature-image img {
  width: 100%;
  height: auto;
  border-radius: 30px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.12);
  transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
}

.ritual-feature-image img:hover {
  transform: scale(1.03);
}

.ritual-feature-text {
  flex: 1 1 450px;
}

.ritual-feature-text .subtitle {
  text-transform: uppercase;
  font-size: 0.85rem;
  letter-spacing: 3px;
  color: var(--gold);
  font-weight: 400;
  display: inline-block;
  padding: 0.5rem 1.5rem;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 50px;
  margin-bottom: 1.5rem;
}

.ritual-feature-text h2 {
  color: var(--deep-brown);
  margin: 1rem 0 1.5rem 0;
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 300;
}

.ritual-feature-text > p {
  margin-bottom: 2.5rem;
  font-size: 1.1rem;
  color: var(--text-medium);
  line-height: 1.9;
}

.ritual-features {
  display: grid;
  gap: 1.5rem;
  margin: 2.5rem 0;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  padding: 1.5rem;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 15px;
  transition: all 0.4s ease;
}

.feature-item:hover {
  background: rgba(255, 255, 255, 1);
  transform: translateX(10px);
  box-shadow: 0 4px 20px rgba(212, 175, 55, 0.15);
}

.feature-icon {
  font-size: 2rem;
  flex-shrink: 0;
}

.feature-item h4 {
  font-size: 1.1rem;
  color: var(--deep-brown);
  margin-bottom: 0.5rem;
  font-weight: 400;
}

.feature-item p {
  font-size: 0.95rem;
  color: var(--text-medium);
  line-height: 1.6;
  margin: 0;
}

/* Campaign Promotional Banner */
.promo-campaign {
  padding: 0;
  background: var(--deep-brown);
  overflow: hidden;
}

.promo-banner-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  min-height: 500px;
  align-items: center;
}

.promo-visual {
  height: 100%;
  position: relative;
  overflow: hidden;
}

.promo-visual img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

.promo-campaign:hover .promo-visual img {
  transform: scale(1.05);
}

.promo-text {
  padding: 4rem 5rem;
  background: var(--deep-brown);
  color: var(--cream);
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
}

.promo-label {
  display: inline-block;
  color: var(--gold);
  font-size: 0.75rem;
  letter-spacing: 4px;
  font-weight: 600;
  text-transform: uppercase;
  margin-bottom: 1.5rem;
  padding: 0.5rem 1.5rem;
  background: rgba(212, 175, 55, 0.15);
  border-radius: 50px;
  width: fit-content;
}

.promo-text h2 {
  color: var(--gold-light);
  margin: 0 0 1.5rem 0;
  font-size: clamp(2.5rem, 5vw, 3.5rem);
  font-weight: 300;
  line-height: 1.2;
  letter-spacing: 0.5px;
}

.promo-text p {
  color: var(--blush);
  margin-bottom: 2.5rem;
  font-size: 1.15rem;
  line-height: 1.8;
  font-weight: 300;
}

.promo-text .btn {
  align-self: flex-start;
}

/* Ritual Categories */
.categories {
  padding: 6rem 0;
  background: linear-gradient(
    to bottom,
    var(--warm-white) 0%,
    var(--cream) 100%
  );
  text-align: center;
}

.categories h2 {
  margin-bottom: 3rem;
  color: var(--deep-brown);
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 3rem;
  margin-top: 3rem;
}

.category {
  display: block;
  text-decoration: none;
  border-radius: 12px;
  overflow: hidden;
  background: white;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
  transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  position: relative;
  flex: 1;
  min-width: 300px;
  height: 300px;
}

.category::before {
  content: "";
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1;
  border-radius: inherit;
  transition: background 0.3s ease;
}

.category:hover::before {
  background: rgba(0, 0, 0, 0.5);
}

.category img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
}

.category:hover img {
  transform: scale(1.1);
}

.category h3 {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 1.5rem;
  color: #f9e79f;
  font-size: 18px;
  font-weight: 600;
  letter-spacing: 1px;
  text-align: center;
  z-index: 2;
  margin-bottom: 0;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  transition: all 0.4s ease;
}

.category:hover {
  transform: translateY(-10px);
  box-shadow: 0 15px 50px rgba(212, 175, 55, 0.3);
}

.category:hover h3 {
  color: white;
  transform: scale(1.05);
}

@media (max-width: 768px) {
  .category {
    min-width: 150px;
    height: 150px;
  }

  .category h3 {
    font-size: 14px;
    padding: 1rem;
  }
}

/* Ritual Products */
.products {
  padding: 6rem 0;
  background: var(--warm-white);
  text-align: center;
}

.products h2 {
  margin-bottom: 3rem;
  color: var(--deep-brown);
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 3rem;
  margin-top: 3rem;
}

.product-card {
  background: rgba(255, 255, 255, 0.95);
  border: 1px solid rgba(212, 175, 55, 0.15);
  border-radius: 20px;
  overflow: hidden;
  transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
}

.product-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 40px rgba(212, 175, 55, 0.2);
  border-color: var(--gold-light);
}

.product-image {
  height: 250px;
  object-fit: cover;
  width: 100%;
  transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
}

.product-card:hover .product-image {
  transform: scale(1.05);
}

.product-info {
  padding: 2rem 1.5rem;
  text-align: left;
}

.product-info h4 {
  margin-bottom: 1rem;
  font-size: 1.2rem;
  color: var(--deep-brown);
  letter-spacing: 1px;
}

.product-info .price {
  display: block;
  margin-bottom: 1rem;
  font-weight: 400;
  font-size: 1.3rem;
  color: var(--gold);
  letter-spacing: 0.5px;
}

.rating {
  font-size: 0.9rem;
  color: var(--gold);
  margin-bottom: 1.25rem;
  display: flex;
  align-items: center;
}

.rating-score {
  color: var(--text-medium);
  margin-left: 0.75rem;
  font-weight: 300;
}

/* Highlight Ritual Section */
.highlight {
  background: linear-gradient(
    135deg,
    var(--blush) 0%,
    var(--rose-gold) 50%,
    var(--gold-light) 100%
  );
  color: var(--deep-brown);
  padding: 6rem 0;
  position: relative;
  overflow: hidden;
}

.highlight::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(
    circle at 20% 50%,
    rgba(255, 255, 255, 0.3),
    transparent 60%
  );
  pointer-events: none;
}

.highlight-inner {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 4rem;
  position: relative;
  z-index: 1;
}

.highlight-text {
  flex: 1 1 300px;
}

.highlight-text .subtitle {
  text-transform: uppercase;
  font-size: 0.85rem;
  letter-spacing: 3px;
  color: var(--gold);
  font-weight: 400;
  display: inline-block;
  padding: 0.5rem 1.5rem;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 50px;
  margin-bottom: 1.5rem;
}

.highlight-text h2 {
  color: var(--deep-brown);
  margin: 1rem 0 1.5rem 0;
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 300;
}

.highlight-text p {
  margin-bottom: 2.5rem;
  font-size: 1.1rem;
  color: var(--text-medium);
  line-height: 1.9;
}

.highlight-image {
  flex: 1 1 400px;
  text-align: center;
}

.highlight-image img {
  max-width: 100%;
  border-radius: 30px;
  box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
  transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

.highlight-image img:hover {
  transform: scale(1.05) rotate(-2deg);
}

/* Brand Transformation Story */
.brand-transformation {
  padding: 6rem 0;
  background: linear-gradient(135deg, var(--warm-white) 0%, var(--cream) 100%);
  overflow: hidden;
}

.transformation-inner {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 4rem;
}

.transformation-image {
  flex: 1 1 500px;
  position: relative;
}

.transformation-image img {
  width: 100%;
  height: auto;
  border-radius: 30px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
}

.transformation-image img:hover {
  transform: scale(1.03) translateY(-10px);
}

.transformation-text {
  flex: 1 1 400px;
}

.transformation-text .subtitle {
  text-transform: uppercase;
  font-size: 0.85rem;
  letter-spacing: 3px;
  color: var(--gold);
  font-weight: 400;
  display: inline-block;
  padding: 0.5rem 1.5rem;
  background: rgba(212, 175, 55, 0.1);
  border-radius: 50px;
  margin-bottom: 1.5rem;
}

.transformation-text h2 {
  color: var(--deep-brown);
  margin: 1rem 0 1.5rem 0;
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 300;
}

.transformation-text p {
  margin-bottom: 1.5rem;
  font-size: 1.1rem;
  color: var(--text-medium);
  line-height: 1.9;
}

.transformation-quote {
  font-size: 1.3rem !important;
  color: var(--gold) !important;
  font-style: italic;
  margin: 2rem 0 !important;
  padding-left: 2rem;
  border-left: 3px solid var(--gold);
  font-weight: 300;
}

/* Wash Day Reset Ritual */
.wash-day-ritual {
  padding: 6rem 0;
  background: linear-gradient(
    to bottom,
    var(--blush) 0%,
    var(--rose-gold) 100%
  );
  position: relative;
}

.wash-day-ritual::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(
    circle at 70% 30%,
    rgba(255, 255, 255, 0.3),
    transparent 70%
  );
  pointer-events: none;
}

.wash-day-inner {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 4rem;
  position: relative;
  z-index: 1;
}

.wash-day-text {
  flex: 1 1 450px;
  order: 2;
}

.wash-day-text .subtitle {
  text-transform: uppercase;
  font-size: 0.9rem;
  letter-spacing: 3px;
  color: var(--deep-brown);
  font-weight: 400;
